# Copy this to .env and fill in values

APP_NAME=Barter API
DEBUG=true

# ── MongoDB Atlas ─────────────────────────────────────────────────────────────
# Local dev (no auth):
MONGODB_URL=mongodb://localhost:27017
# Atlas cluster (production):
# MONGODB_URL=mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=barter

# ── Auth ──────────────────────────────────────────────────────────────────────
SECRET_KEY=super-secret-change-me-in-prod

# ── Gemini AI ─────────────────────────────────────────────────────────────────
# Get your key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# ── PyTorch Vision ────────────────────────────────────────────────────────────
# Set false on low-memory machines (disables /ai/classify-image endpoint)
VISION_ENABLED=true

# ── Trade matching ────────────────────────────────────────────────────────────
DEFAULT_RADIUS_KM=25.0
VALUE_TOLERANCE_PERCENT=0.30
